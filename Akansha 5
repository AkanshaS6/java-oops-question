#Convert a float to an integer and print both values. Then convert an integer to a double and print both.

public class TypeConversion {
    public static void main(String[] args) {
        // Convert float to int
        float floatValue = 45.67f;
        int intFromFloat = (int) floatValue;  // Explicit type casting

        // Convert int to double
        int intValue = 100;
        double doubleFromInt = intValue;  // Implicit type casting

        // Print the results
        System.out.println("Original float value: " + floatValue);
        System.out.println("Converted to int: " + intFromFloat);

        System.out.println("Original int value: " + intValue);
        System.out.println("Converted to double: " + doubleFromInt);
    }
}
